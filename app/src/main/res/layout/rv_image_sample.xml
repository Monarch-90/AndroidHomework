<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rec_image_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rvi_title"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/rvi_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rvi_text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:maxLines="1"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/rvi_date"
        app:layout_constraintStart_toEndOf="@+id/rvi_title"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rvi_date"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:maxLines="1"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rvi_text"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_image_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvi_date" />

</androidx.constraintlayout.widget.ConstraintLayout>